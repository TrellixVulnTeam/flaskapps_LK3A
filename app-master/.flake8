[flake8]
ignore = 
    # line length is handled by black
    E501,
    # W503 & E203 are not PEP 8 compliant and conflicts with black
    W503,
    E203,
    # Ignore "f-string is missing placeholders"
    F541
exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    static,
    templates,
    # migrations are generated by alembic
    migrations,
    docs

per-file-ignores =
    # ignore unused imports in __init__
    __init__.py:F401