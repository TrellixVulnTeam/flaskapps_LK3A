#!/bin/bash

CWD=$($PWD)
cd <%= @pkey_path %>
openssl req -x509 -nodes -days <%= @cert_days %> \
    -newkey rsa:<%= @cert_bit %> \
    -keyout <%= @pkey_path %>/<%= @vhost %>.key \
    -out <%= @cert_path %>/<%= @vhost %>.crt \
    -subj '/C=<%= @cert_country %>/ST=<%= @cert_state %>/L=<%= @cert_locality %>/O=<%= @cert_org %>/OU=<%= @cert_unit %>/CN=<%= @vhost %>'
cd "$CWD"